doctype  
html(lang="en")
    head
        include ../includes/header.pug

        script(src='/static/js/sidebar.js', defer)
        link(rel='stylesheet', href='/static/css/sidebar.css')
        
    body
        include ../includes/sidebar.pug
        
        #sidebarExtension.bg-dark
            header.text-center.pt-4
                .large-icon.bg-black.round
                    if guild.icon
                        img.round(src=guild.iconURL({ dynamic: true, size: 128 }), alt=guild.name)
                    else
                        p.abbr #{guild.nameAcronym}
                h4.pt-2.text-color-white #{guild.name}
            .tabs.navbar-nav
                .category Modules
                a(href='#') #[i.fas.fa-gavel.pr-1] Moderation
                a(href='#') #[i.fa-solid.fa-droplet.pr-1] General
                a(href='#') #[i.fas.fa-sack-dollar.pr-1] Economy
                a(href='#') #[i.fas.fa-compact-disc.pr-1] Music

        include ../includes/navbar.pug
        .jumbotron.text-center.bg-transparent 
            h1.display-3 #{guild.name}
